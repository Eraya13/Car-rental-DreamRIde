@model Autopujcovna_DreamRide.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Přihlášení";
}

<div class="row">
    <div class="col-5">
        <form class="d-flex flex-column gap-2" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <div class="content-general">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="Email" class="form-label label-names" aria-describedby="Email" placeholder="Pepicek@email.cz"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label label-names"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check-container mb-2">
                <input asp-for="RememberMe" class="form-check-input">
                <label asp-for="RememberMe" class="form-check-label"></label>
                <button type="submit" class="btn btn-general">Přihlásit se</button>
                @*neuvádíme požadovanou akci, avšak podle názvu View se snaží ASP.NET spustit příslušnou akci z AccountControlleru*@
            </div>
            </div>
            </form>
    </div>
</div>

@section Scripts {
    @*skript nutný pro běh správné validace!! - nezapomenout!*@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}