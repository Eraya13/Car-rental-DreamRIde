@model Autopujcovna_DreamRide.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registrace";
    Layout = LayoutPaths.LoginLayout;
}

<div class="row">
    <div class="col-7">
        <section class="mb-4">
            <div class="req-password">
                <p class="mb-3"><strong>Požadavky na heslo:</strong></p>
                <p>Musí obsahovat alespoň 1 číslici </p>
                <p>Minimální délka 8 znaků</p>
            </div>
        </section>
        <form class="d-flex flex-column" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <div class="content-general">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-4">
                    <label asp-for="Username" class="form-label label-names-xl"></label>
                    <input asp-for="Username" class="form-control" aria-describedby="Uživatelské jméno" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label label-names-xl"></label>
                    <input asp-for="Password" class="form-control" aria-describedby="Heslo" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="ConfirmPassword" class="form-label label-names-xl"></label>
                    <input asp-for="ConfirmPassword" class="form-control" aria-describedby="Potvrzení hesla" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-general">Registrovat</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}