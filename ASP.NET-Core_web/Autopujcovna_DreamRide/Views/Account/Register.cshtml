@model Autopujcovna_DreamRide.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registrace";
}

<div class="row">
    <div class="col-5">
        <form class="d-flex flex-column gap-2" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <div class="content-general">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="form-label label-names"></label>
                    <input asp-for="Email" class="form-control" aria-describedby="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label label-names"></label>
                    <input asp-for="Password" class="form-control" aria-describedby="Heslo" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="form-label label-names"></label>
                    <input asp-for="ConfirmPassword" class="form-control" aria-describedby="Potvrzení hesla" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-general">Registrovat</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}